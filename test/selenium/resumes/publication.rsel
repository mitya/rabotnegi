setup :clear_tables=>[:resumes]
open '/resumes;kill_session'
open '/'
click_and_wait 'link=Моё резюме'
click_and_wait 'link=Опубликовать резюме'

store 'Иван', 'fname'
store 'Петров', 'lname'
store 'spb', 'city'
store 'it', 'industry'
store 'Программист', 'job_title'
store '30000', 'min_salary'
store 'aaaaa', 'about_me'
store 'bbbbb', 'job_reqs'
store 'ivan.petrov@gmail.com', 'contact_info'
store '123', 'password'

type 'resume[fname]', '${fname}'
type 'resume[lname]', '${lname}'
select 'resume[city]', 'value=${city}'
select 'resume[industry]', 'value=${industry}'
type 'resume[job_title]', '${job_title}'
type 'resume[min_salary]', '${min_salary}'
type 'resume[about_me]', '${about_me}'
type 'resume[job_reqs]', '${job_reqs}'
type 'resume[contact_info]', '${contact_info}'
type 'resume[password]', '${password}'
click_and_wait '//input[@value="Опубликовать"]'

verify_text_present '${fname}'
verify_text_present '${lname}'
verify_text_present '${job_title}'
verify_text_present '${min_salary}'
verify_text_present '${about_me}'
verify_text_present '${job_reqs}'
verify_text_present '${contact_info}'