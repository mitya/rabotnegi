<% title "Новая вакансия", :custom => true %>

<% url = current_employer??
  (@vacancy.new?? pro_employer_vacancies_path : [:pro_employer, @vacancy]) :
  (@vacancy.new?? casual_employer_vacancies_path : [:casual_employer, @vacancy]) %>
<% form_for @vacancy, :html => { :id => 'vacancy-edit-form' }, :url => url do |f| %>
<% wrapper do %>
  <%= tr2 title_html %>
	<%= tr2 errors_for(@vacancy) %>
	<%= f.tr :employer_name, 'Работодатель', f.text_field(:employer_name) unless current_employer %>
	<%= f.tr :title, 'Должность', f.text_field(:title) %>
	<%= f.tr :city, 'Город', f.select(:city, cities) %>
	<%= f.tr :industry, 'Отрасль', f.group_select(:industry, industry_groups) %>
	<%= f.tr :salary_text, 'Зарплата', f.text_field(:salary_text), :after => 'рублей', :comment => 'Формат: 10000 | от 10000 | до 20000 | от 10000 до 20000.' %>
	<%= f.tr :description, 'Описание', f.text_area(:description) %>
	<%= tr2 submit_section(@vacancy.new?? 'Опубликовать' : 'Сохранить') %>
<% end %>
<% end %>