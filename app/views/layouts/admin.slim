! doctype html

head
  meta{http-equiv="Content-Type" content="text/html;charset=UTF-8"}
  title= "#{@page_title} - Админская Работнегов"
  = stylesheet_link_tag %w(gen/common gen/admin), :cache => "pack/admin"
  = javascript_include_tag %w(lib/jquery lib/rails), :cache => 'pack/lib'
  = javascript_include_tag %w(gen/common gen/application), :cache => 'pack/app'

body.admin{id=@page_id}
  #header
    #nav
      table#tab-bar
        col{width=10}
        col{width="*"}
        tr
          td.spacer
          td#logo-pseudo-tab
            #logo
              a{href='/'}
                span#logo-pro Р
                span#logo-rabotu аботнеги.ру Админ

  #content
    = content_tag :div, flash[:notice], :id => 'flash-notice' if flash[:notice]
    = content_tag :div, flash[:error], :id => 'flash-error' if flash[:error]
    = yield :layout
  
  #footer © 2008 Работнеги.ру
